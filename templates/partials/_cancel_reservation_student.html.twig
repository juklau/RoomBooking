{#
    Bouton annuler une réservation — version étudiant
    Uniquement pour ses propres réservations
    Usage : {{ include('partials/_cancel_reservation_student.html.twig', { reservation: res }) }}
#}
<form method="post"
      action="{{ path('app_student_reservation_cancel', {id: reservation.id}) }}"
      onsubmit="return confirm('Annuler la réservation de {{ reservation.room.name }} du {{ reservation.reservationStart|date("d/m/Y") }} à {{ reservation.reservationStart|date("H:i") }} ?')">

    <input type="hidden" name="_token"
           value="{{ csrf_token('cancel_reservation_' ~ reservation.id) }}">

    <button type="submit" class="btn-action-danger btn-sm-action" title="Annuler la réservation">
        ✕
    </button>

</form>