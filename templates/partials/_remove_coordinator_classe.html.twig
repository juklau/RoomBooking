{#
    Bouton retirer un coordinateur d'une classe — version admin
    NE SUPPRIME PAS le compte — détache uniquement de la classe
    Usage : {{ include('partials/_remove_coordinator_classe.html.twig', { coordinator: coordinator, classe: classe }) }}
#}
<form method="post"
      action="{{ path('app_admin_coordinator_remove', {classeId: classe.id, id: coordinator.id}) }}"
      onsubmit="return confirm('Retirer {{ coordinator.user.firstname }} {{ coordinator.user.lastname }} de la classe {{ classe.name }} ?\n\nSon compte ne sera pas supprimé.')">

    <input type="hidden" name="_token"
           value="{{ csrf_token('remove_coordinator_' ~ coordinator.id) }}">

    <button type="submit" class="btn-action-danger btn-sm-action" title="Retirer de la classe">
        ✕
    </button>

</form>

