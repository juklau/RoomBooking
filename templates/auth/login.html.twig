{% extends 'base.html.twig' %}

{% import 'partials/form.html.twig' as form %}

{% block title %}Connexion — RoomBooking{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/login.css')}}">
{% endblock %}

{% block body %}
<div class="login-page d-flex justify-content-center align-items-center">
    <div class="login-card">

        <h1 class="mb-3 text-center">RoomBooking</h1>
        <p class="subtitle text-center">Connectez-vous pour réserver une salle</p>

        {% if error %}
            <div class="alert-error">
                ⚠ {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form class="form-control" method="post" action="{{ path('app_login') }}">

            <div class="form-group">
                {{ form.input('email', 'Email', last_username, {
                    type: 'email',
                    required: true,
                    autocomplete: 'email',
                    placeholder: 'vous@example.com'
                }) }}
            </div>

            <div class="form-group">
                {{ form.input('password', 'Mot de passe', null, {
                    type: 'password',
                    required: true,
                    autocomplete: 'current-password',
                    placeholder: '••••••••'
                }) }}
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group">
                <button type="submit" class="btn-login">Se connecter</button>
            </div>
        </form>

        <div class="login-footer">
            MediaSchool IRIS Nice &mdash; BTS SIO SLAM
        </div>

    </div>
</div>
{% endblock %}