{% extends 'base.html.twig' %}

{% block title %}Salles ‚Äî Admin RoomBooking{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css')}}">
    <link rel="stylesheet" href="{{ asset('styles/rooms.css')}}">
{% endblock %}

{% block body %}
    
<div class="container-fluid px-4 py-3 mt-3">

    {# ---- Header ---- #}
    <div class="dashboard-header"> 
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="badge-admin">Administrateur</span>
                </div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <a href="{{ path('app_admin_dashboard') }}" class="breadcrumb-link">Dashboard</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>
                    <span class="breadcrumb-current">Salles</span>
                </div>
                <h1>Gestion des salles</h1>
                <p>{{ rooms|length }} salle{{ rooms|length > 1 ? 's' : '' }} enregistr√©e{{ rooms|length > 1 ? 's' : '' }}</p>
            </div>
            <div>
                {# T√¢che 3 : bouton vers Cr√©er une salle #}
                <a href="{{ path('app_admin_room_new') }}" class="btn-action-primary text-decoration-none d-inline">+ Cr√©er une salle</a>
            </div>
        </div>
    </div>

    {# ---- Liste des salles ---- #}
    {% if rooms is empty %}
        <div class="empty-state">
            <div class="empty-icon">üè´</div>
            <p>Aucune salle enregistr√©e.</p>
            <a href="#" class="btn-action-primary text-decoration-none d-inline">Cr√©er la premi√®re salle</a>
        </div>
    {% else %}
        <div class="row g-3">
            {% for room in rooms %}
                <div class="col-md-6 col-lg-4">
                    <div class="room-card-full shadow">

                        {# Nom + capacit√© #}
                        <div class="room-card-header d-flex align-items-start justify-content-between">
                            <div>
                                <div class="room-card-name"> {{ room.name }}</div>
                                <div class="room-card-capacity">üë• {{ room.capacity }} places</div>
                            </div>
                            <span class="room-card-badge">Salle</span>
                        </div>

                        {# √âquipements #}
                        <div class="room-card-equip">
                            {% if room.equipments is not empty %}
                                {% for equip in room.equipments %}
                                    <span class="equipment-tag">{{ equip.name }}</span> 
                                {% endfor %}
                            {% else %}
                                <span class="equipment-tag muted">Aucun √©quipement</span> 
                            {% endif %}   
                        </div>

                        {# Actions #}
                        <div class="room-card-actions d-flex gap-2 mt-3">
                            {# T√¢che 2 : voir les d√©tails #}
                            <a href="{{ path('app_admin_room_show', {id: room.id}) }}" class="btn-action-secondary text-decoration-none d-inline flex-fill text-center">Voir le d√©tail</a>
                            
                            {# T√¢che 4+1: Modifier les donn√©es d'une salle #}
