                            {# T√¢che 4 : supprimer #}
                            {# <a href="#" class="btn-action-danger text-decoration-none d-inline">üóë</a> => √† √©viter √† cause de la s√©curit√©#} 
                            {{ include('partials/_delete_room.html.twig', { room: room }) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
 </div>
{% endblock %}
