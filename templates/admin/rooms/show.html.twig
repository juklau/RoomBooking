{% extends 'base.html.twig' %}

{% block title %}{{ room.name }} ‚Äî Admin RoomBooking{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css')}}">
    <link rel="stylesheet" href="{{ asset('styles/rooms.css')}}">
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3 mt-3">

    {# ---- Header ---- #}
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="badge-admin">Administrateur</span>
                </div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <a href="{{ path('app_admin_dashboard') }}" class="breadcrumb-link">Dashboard</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>

                    <a href="{{ path('app_admin_rooms') }}" class="breadcrumb-link">Salles</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>

                    <span class="breadcrumb-current">{{ room.name }}</span>
                </div>
                <h1>{{ room.name }}</h1>
                <p>D√©tail de la salle</p>
            </div>
            <div class="d-flex gap-3">
                <a href="{{ path('app_admin_room_equipments', {id: room.id}) }}"
                            class="btn-action-secondary text-decoration-none d-inline">
                    G√©rer les √©quipements
                </a>

                {# T√¢che 4+1: Modifier les donn√©es d'une salle #}
                <a href="{{ path('app_admin_room_edit', {id: room.id}) }}" class="btn-action-secondary text-decoration-none d-inline flex-fill text-center my-auto">Modifier</a>

                {# T√¢che 4 : supprimer #}
                {# <a href="#" class="btn-action-danger text-decoration-none d-inline"> üóë Supprimer </a> #}
                {{ include('partials/_delete_room.html.twig', { room: room }) }}
            </div>
        </div>
    </div>

    <div class="row g-4 d-flex justify-content-center">

        {# ---- Infos principales ---- #}
        <div class="col-md-6 col-lg-4 ">
            <div class="detail-card shadow">
                <div class="detail-card-title">üìã Informations</div>
                <div class="detail-row">
                    <span class="detail-label">Nom</span>
                    <span class="detail-value">{{ room.name }}</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Capacit√©</span>
                    <span class="detail-value">üë• {{ room.capacity }} places</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">√âquipements</span>
                    <span class="detail-value">{{ room.equipments|length }}</span>
                </div>
            </div>
        </div>

        {# ---- √âquipements ---- #}
        <div class="col-md-6 col-lg-4">
            <div class="detail-card shadow">
                <div class="detail-card-title">üñ• √âquipements</div>

                {% if room.equipments is empty %}
                    <p class="text-muted small mt-2">Aucun √©quipement enregistr√©.</p>
                {% else %}
                    <div class="d-flex flex-wrap gap-2 mt-2">
                        {% for equip in room.equipments %}
                            <span class="equipment-tag-lg">{{ equip.name }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        {# ---- R√©servations √† venir pour cette salle ---- #}
        <div class="col-md-6 col-lg-4">
            <div class="detail-card shadow">
                <div class="detail-card-title">üìÖ Prochaines r√©servations</div>

                {% set roomReservations = room.reservations|filter(r => r.reservationStart >= date() and r.status != 'canceled')  %}

                {% if roomReservations is empty %}
                    <p class="text-muted small mt-2">Aucune r√©servation √† venir.</p>
                {% else %}
                    <div class="d-flex flex-column gap-2 mt-2">
                        {% for res in roomReservations %}
                            <div class="mini-resa d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="mini-resa-user">
                                        {{ res.user.firstname }} {{ res.user.lastname }} 
                                    </div>
                                    <div class="mini-resa-date">
                                        {{ res.reservationStart|date('d/m/Y H:i') }}
                                        ‚Üí {{ res.reservationEnd|date('H:i') }}
                                    </div>
            
                                </div>
                                <div>
                                    {{ include('partials/_cancel_reservation.html.twig', { reservation: res }) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# ---- Retour ---- #}
    <div class="mt-5">
        <a href="{{ path('app_admin_rooms') }}" class="btn-action-secondary text-decoration-none d-inline">
            ‚Üê Retour √† la liste
        </a>
    </div>

</div>
{% endblock %}
