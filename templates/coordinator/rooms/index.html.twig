{% extends 'base.html.twig' %}

{% block title %}Salles & Disponibilit√©s ‚Äî Coordinateur RoomBooking{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/classes.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/coordinator.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/rooms.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3 mt-3">

    {# ---- Header ---- #}
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <span class="badge-coordinator">Coordinateur</span>
                </div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <a href="{{ path('app_coordinator_dashboard') }}" class="breadcrumb-link-coordinator">Dashboard</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>

                    <span class="breadcrumb-current">Salles</span>
                </div>
                <h1>Salles & Disponibilit√©s</h1>
                <p>{{ roomsWithStats|length }} salle{{ roomsWithStats|length > 1 ? 's' : '' }} enregistr√©e{{ roomsWithStats|length > 1 ? 's' : '' }}</p>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_coordinator_reservation_new') }}" class="btn-coordinator-outline text-decoration-none d-inline">
                    R√©server une salle
                </a>
            </div>
        </div>
    </div>

    {{ include('coordinator/rooms/_filter_rooms.html.twig')}}

    {# ---- Tableau des salles ---- #}
    <div class="reservations-table details shadow">
        <table class="table table-borderless mb-0">
            <thead>
                <tr>
                    <th>Salle</th>
                    <th>Capacit√©</th>
                    <th>Statut actuel</th>
                    <th>Ma prochaine r√©servation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if roomsWithStats is empty %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Aucune salle enregistr√©e.
                        </td>
                    </tr>
                {% else %}
                    {% for item in roomsWithStats %}
                        {% set isFiltered = filterStart and filteredRooms is not null and item.room in filteredRooms %}
                        <tr class="{{ isFiltered ? 'row-available-highlight' : '' }}">
                        {# onclick="window.location='{{ path('app_coordinator_room_show', {id: item.room.id}) }}'" #}
                            {# style="cursor: pointer;" #}

                            {# Nom + √©quipements #}
                            <td>
                                <div class="room-row-name text-black">{{ item.room.name }}</div>

                                {% if item.room.equipments is not empty %}
                                    <div class="room-row-equip">

                                        {% for equip in item.room.equipments %}
                                            <span class="equipment-tag">{{ equip.name }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </td>

                            {# Capacit√© #}
                            <td>
                                <span class="room-capacity-badge">üë• {{ item.room.capacity }}</span>
                            </td>

                            {# Statut actuel #}
                            <td>
                                {% if item.status == 'occupied' %}

                                    <span class="status-badge d-inline status-occupied">üî¥ Occup√©e</span>
                                    
                                    {% if item.currentReservation %}

                                        <div class="status-detail">
                                            jusqu'√† {{ item.currentReservation.reservationEnd|date('H:i') }}
                                        </div>
                                    {% endif %}

                                {% else %}
                                    <span class="status-badge status-available">üü¢ Disponible</span>
                                {% endif %}
                            </td>

                            {# Prochaine r√©servation #}
                            <td class="text-center">
                                {% if item.nextReservation %}

                                    <div class="next-res-date">{{ item.nextReservation.reservationStart|date('d/m/Y') }}</div>
                                    <div class="next-res-time">
                                        {{ item.nextReservation.reservationStart|date('H:i') }}
                                        ‚Üí {{ item.nextReservation.reservationEnd|date('H:i') }}
                                    </div>
                                {% else %}
                                    <span class="text-muted-next-res small">Aucune</span>
                                {% endif %}
                            </td>

                            {# Actions #}
                            <td onclick="event.stopPropagation()">
                                <div class="d-flex gap-4">
                                    {#  #}
                                    <a href="{{ path('app_coordinator_room_show', {id: item.room.id}) }}"
                                       class="btn-action-secondary coordinator btn-sm-action text-decoration-none" title="Voir le d√©tail">
                                        <span class="action-icon-dispo d-flex align-items-center justify-content-center">üëÅ</span>
                                    </a>

                                    {# r√©server #}
                                    <a href="{{ path('app_coordinator_reservation_new', {room: item.room.id}) }}"
                                       class="btn-coordinator btn-sm-action text-decoration-none" title="R√©server cette salle">
                                        <span class="action-icon-dispo d-flex align-items-center justify-content-center">üìÖ</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
