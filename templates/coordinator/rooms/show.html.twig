{% extends 'base.html.twig' %}

{% block title %}{{ room.name }} ‚Äî Coordinateur RoomBooking{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/coordinator.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/rooms.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3 mt-3">

    {# ---- Header ---- #}
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <span class="badge-coordinator">Coordinateur</span>
                </div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <a href="{{ path('app_coordinator_dashboard') }}" class="breadcrumb-link-coordinator">Dashboard</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>

                    <a href="{{ path('app_coordinator_rooms') }}" class="breadcrumb-link-coordinator">Salles</a>
                    <span class="breadcrumb-sep">‚Ä∫</span>

                    <span class="breadcrumb-current">{{ room.name }}</span>
                </div>
                <h1>{{ room.name }}</h1>
                <p>D√©tail de la salle</p>
            </div>
            <div>
                <a href="{{ path('app_coordinator_reservation_new') }}"
                   class="btn-coordinator-outline text-decoration-none d-inline">
                    R√©server cette salle
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 d-flex justify-content-center">

        {# ---- Infos principales ---- #}
        <div class="col-md-6 col-lg-3 ">
            <div class="detail-card shadow">
                <div class="detail-card-title">üìã Informations</div>

                <div class="detail-row">
                    <span class="detail-label">Nom</span>
                    <span class="detail-value">{{ room.name }}</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Capacit√©</span>
                    <span class="detail-value">üë• {{ room.capacity }} places</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">√âquipements</span>
                    <span class="detail-value">{{ room.equipments|length }}</span>
                </div>
            </div>
        </div>

        {# ---- √âquipements ---- #}
        <div class="col-md-6 col-lg-4">
            <div class="detail-card shadow">
                <div class="detail-card-title">üñ• √âquipements</div>

                {% if room.equipments is empty %}
                    <p class="text-muted small mt-2">Aucun √©quipement enregistr√©.</p>
                {% else %}
                    <div class="d-flex flex-wrap gap-2 mt-2">
                        {% for equip in room.equipments %}
                            <span class="equipment-tag-lg">{{ equip.name }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        {# ---- R√©servations √† venir pour cette salle ---- #}
        <div class="col-md-6 col-lg-5">
            <div class="detail-card shadow">
                <div class="detail-card-title">üìÖ Prochaines r√©servations</div>

                {# toutes les r√©servations √† venir #}
                {% set upcoming = room.reservations|filter(r => r.reservationStart >= date() and r.status != 'canceled')  %}

                {% if upcoming is empty %}
                    <p class="text-muted small mt-2">Aucune r√©servation √† venir pour cette salle.</p>
                {% else %}
                    <div class="reservations-table details mt-3">
                        <table class="table table-borderless mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Cr√©neau</th>
                                    <th>R√©serv√© par</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                {% for res in upcoming %}
                                    {% set isMine = res.user.id == user.id %}
                                    <tr class="{{ isMine ? 'row-mine' : '' }}">
                                        <td>
                                            <div class="next-res-date">
                                                {{ res.reservationStart|date('d/m/Y') }}
                                            </div>
                                        </td>
                                        <td>
                                            <div class="next-res-time">
                                                {{ res.reservationStart|date('H:i') }}
                                                ‚Üí {{ res.reservationEnd|date('H:i') }}
                                            </div>
                                        </td>
                                        <td>
                                            {% if isMine %}
                                                <span class="badge-mine">üë§ Moi</span>
                                            {% else %}
                                                <span class="text-muted-detail-rooms small">Autre utilisateur</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if isMine %}
                                                {# annuler sa propre r√©servation #}
                                                {{ include('partials/_cancel_reservation.html.twig', { reservation: res }) }}
                                            {% else %}
                                                <span class="text-muted-detail-rooms small">‚Äî</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# ---- Retour ---- #}
    <div class="mt-5">
        <a href="{{ path('app_coordinator_rooms') }}" class="btn-action-secondary text-decoration-none d-inline">
            ‚Üê Retour aux salles
        </a>
    </div>

</div>
{% endblock %}
